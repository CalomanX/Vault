{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'vault'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cli",
                    "--package=vault"

                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "args": ["admin", "add-profile", "--security-key", "1234", "--name", "profile0"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'vault'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cli",
                    "--package=vault",
                    "--all-features"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/vault.exe",
            "args": ["init", "--security-key", "1234"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "rust: cargo build"
        },

    ]
}